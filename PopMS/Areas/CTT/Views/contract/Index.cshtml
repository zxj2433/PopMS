@model PopMS.ViewModel.CTT.contractVMs.contractListVM
@inject IStringLocalizer<WalkingTec.Mvvm.Core.Program> Localizer;

<wt:searchpanel vm="@Model" reset-btn="true">
<wt:row items-per-row="ItemsPerRowEnum.Three">
<wt:combobox field="Searcher.DCID" items="Searcher.AllDCs" empty-text="@Localizer["All"]" />
<wt:textbox field="Searcher.Name" />
<wt:textbox field="Searcher.Vendor" />
<wt:datetime field="Searcher.ImportTime" range="true" />
</wt:row>
</wt:searchpanel>
<wt:grid vm="@Model" url="/CTT/contract/Search"/>
