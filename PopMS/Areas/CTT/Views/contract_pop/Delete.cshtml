@model PopMS.ViewModel.CTT.contract_popVMs.contract_popVM
@inject IStringLocalizer<WalkingTec.Mvvm.Core.Program> Localizer;

<wt:form vm="@Model">
	<wt:quote>@Model.Localizer["DeleteConfirm"]</wt:quote>
    <wt:row items-per-row="ItemsPerRowEnum.Two">
        <wt:display field="Entity.Contract.Name" />
        <wt:display field="Entity.Pop.PopName" />
        <wt:display field="Entity.UnitPack" />
        <wt:display field="Entity.Cnt" />
        <wt:display field="Entity.Price" />
    </wt:row>
    <wt:hidden field="Entity.ID" />
    <wt:row align="AlignEnum.Right">
        <wt:submitbutton theme=" ButtonThemeEnum.Warm" text="删除"/>
        <wt:closebutton />
    </wt:row>
</wt:form>
